{
  "groups": {
    "core": {
      "packages": [
        "packages/core/package.json"
      ]
    },
    "web": {
      "packages": [
        "packages/web/package.json"
      ],
      "ignore": ["core"]
    },
    "mobile": {
      "packages": [
        "packages/mobile/package.json"
      ],
      "ignore": ["core"]
    },
    "backend": {
      "packages": [
        "packages/backend/package.json",
        "packages/backend/functions/package.json"
      ]
    },
    "root": {
      "packages": [
        "package.json"
      ],
      "ignore": ["@babel/core", "@babel/cli"]
    }
  }
}
